{
  "min_packer_version": "0.12.0",
  "variables": {
    "aws_region": "{{env `AWS_DEFAULT_REGION`}}",
    "install_auth_signing_script": "true",
    "ca_public_key_path": "/home/ec2-user/.ssh/tls/ca.crt.pem"
  },
  "builders": [{
    "ami_name": "firehawk-base-ubuntu18-{{isotime | clean_resource_name}}-{{uuid}}",
    "ami_description": "An Ubuntu 18.04 AMI that will accept connections from hosts with TLS Certs.",
    "instance_type": "t2.micro",
    "name": "ubuntu18-ami",
    "region": "{{user `aws_region`}}",
    "type": "amazon-ebs",
    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "architecture": "x86_64",
        "name": "ubuntu/images/hvm-ssd/ubuntu-bionic-18.04-amd64-server-*",
        "block-device-mapping.volume-type": "gp2",
        "root-device-type": "ebs"
      },
      "owners": ["099720109477"],
      "most_recent": true
    },
    "ssh_username": "ubuntu"
  },{
    "ami_name": "firehawk-base-ubuntu16-{{isotime | clean_resource_name}}-{{uuid}}",
    "ami_description": "An Ubuntu 16.04 AMI that will accept connections from hosts with TLS Certs.",
    "instance_type": "t2.micro",
    "name": "ubuntu16-ami",
    "region": "{{user `aws_region`}}",
    "type": "amazon-ebs",
    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "architecture": "x86_64",
        "name": "ubuntu/images/hvm-ssd/ubuntu-xenial-16.04-amd64-server-*",
        "block-device-mapping.volume-type": "gp2",
        "root-device-type": "ebs"
      },
      "owners": ["099720109477"],
      "most_recent": true
    },
    "ssh_username": "ubuntu"
  },{
    "ami_name": "firehawk-base-amazon-linux-2-{{isotime | clean_resource_name}}-{{uuid}}",
    "ami_description": "An Amazon Linux 2 AMI that will accept connections from hosts with TLS Certs.",
    "instance_type": "t2.micro",
    "name": "amazon-linux-2-ami",
    "region": "{{user `aws_region`}}",
    "type": "amazon-ebs",
    "source_ami_filter": {
      "filters": {
        "virtualization-type": "hvm",
        "architecture": "x86_64",
        "name": "*amzn2-ami-hvm-*",
        "block-device-mapping.volume-type": "gp2",
        "root-device-type": "ebs"
      },
      "owners": ["amazon"],
      "most_recent": true
    },
    "ssh_username": "ec2-user"
  },{
    "ami_name": "firehawk-base-centos7-{{isotime | clean_resource_name}}-{{uuid}}",
    "ami_description": "A Cent OS 7 AMI that will accept connections from hosts with TLS Certs.",
    "instance_type": "t2.micro",
    "name": "centos7-ami",
    "region": "{{user `aws_region`}}",
    "type": "amazon-ebs",
    "source_ami_filter": {
      "filters": {
        "name": "CentOS Linux 7 x86_64 HVM EBS *",
    "product-code": "aw0evgkw8e5c1q413zgy5pjce"
      },
      "owners": ["679593333241"],
      "most_recent": true
    },
    "ssh_username": "centos"
  }],
  "provisioners": [{
    "type": "shell",
    "inline": ["mkdir -p /tmp/terraform-aws-vault/modules"]
  },{
    "type": "file",
    "source": "{{template_dir}}/../../modules/",
    "destination": "/tmp/terraform-aws-vault/modules",
    "pause_before": "30s"
  },{
    "type": "file",
    "source": "{{template_dir}}/auth/sign-request.py",
    "destination": "/tmp/sign-request.py"
  },{
    "type": "file",
    "source": "{{user `ca_public_key_path`}}",
    "destination": "/tmp/ca.crt.pem"
},{
    "type": "shell",
    "inline": [
      "if [[ '{{user `install_auth_signing_script`}}' == 'true' ]]; then",
      "sudo mkdir -p /opt/vault/scripts/",
      "sudo mv /tmp/sign-request.py /opt/vault/scripts/",
      "else",
      "sudo rm /tmp/sign-request.py",
      "fi",
      "sudo mkdir -p /opt/vault/tls/",
      "sudo mv /tmp/ca.crt.pem /opt/vault/tls/",
      "sudo chmod -R 600 /opt/vault/tls",
      "sudo chmod 700 /opt/vault/tls",
      "sudo /tmp/terraform-aws-vault/modules/update-certificate-store/update-certificate-store --cert-file-path /opt/vault/tls/ca.crt.pem"
    ],
    "inline_shebang": "/bin/bash -e"
  },{
    "type": "shell",
    "inline": [
      "sudo systemd-run --property='After=apt-daily.service apt-daily-upgrade.service' --wait /bin/true"
    ],
    "inline_shebang": "/bin/bash -e",
    "only": ["ubuntu18-ami"]
  },{
    "type": "shell",
    "inline": [
      "echo 'debconf debconf/frontend select Noninteractive' | sudo debconf-set-selections",
      "sudo apt-get install -y -q",
      "sudo apt-get -y update",
      "sudo apt-get install -y git"
    ],
    "inline_shebang": "/bin/bash -e",
    "only": ["ubuntu16-ami","ubuntu18-ami"]
  },{
    "type": "shell",
    "inline": [
      "sudo apt-get -y install python3.7",
      "sudo apt-get install -y python3-pip",
      "python3 -m pip install --upgrade pip",
      "python3 -m pip install boto3"
    ],
    "inline_shebang": "/bin/bash -e",
    "only": ["ubuntu18-ami"]
  },{
    "type": "shell",
    "inline": [
      "sudo yum update -y",
      "sudo yum install -y git",
      "sudo yum install -y python python3.7 python3-pip",
      "pip3 install --user --upgrade pip",
      "pip3 install --user boto3"
    ],
    "only": ["amazon-linux-2-ami","centos7-ami"]
  }]
}
